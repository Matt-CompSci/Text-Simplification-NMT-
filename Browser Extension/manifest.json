{
  "manifest_version": 2,
  "name": "Text Simplification",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "simplify.png",
    "default_popup": "popup.html",
    "default_title": "Simplify Text on a website"
  },

  "permissions": [
    "<all_urls>",
    "activeTab"
  ]
}